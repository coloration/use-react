{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "lib": ["ESNext", "dom"],
    "paths": {
      "@coloration/use-react": ["./src"]
    },
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declarationDir": "./types",
  },
  "exclude": ["demos", "node_modules", "*/**/test.ts", "*.config.ts", "pages"]
}
